<%- include("partials/header.ejs"); %>
<h1>My BLOGBUSTERðŸ“”</h1>
<div id="main-container">
  <!-- Forms section -->
  <div id="left-section">
    <div class="user-form">
      <h2>Share Your Thoughts</h2>
      <form action="/" method="POST">
        <input type="text" class="form-text" id="username" name="username" placeholder="Username" /><br /><br />
        <input type="text" class="form-text" id="topic" name="topic" placeholder="Topic" /><br /><br />
        <input type="text" class="form-text" id="subject" name="subject" placeholder="Subject" /><br /><br />
        <textarea maxlength="1000" rows="7" cols="50" id="post" name="post" placeholder="Post Contents"></textarea><br />
        <p id="charLimit"></p>
        <input type="submit" id="submit-btn" class="form-btn" value="Submit" />
      </form>
    </div>
    <a href="posts">ðŸ‘‰ All posts</a>
  </div>
  <!-- Links section -->
  <div id="right-section">
    <% if(locals.posts.length === 0) { %>
        <h3>No Posts Yet</h3>
    <% } else { %>
      <% posts.forEach(post => { %>
         <a href="posts#user-output-<%= post.id %>"><%= post.subject %></a>
      <% })} %>
  </div>
</div>
<%- include("partials/footer.ejs"); %>